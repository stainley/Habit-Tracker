<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/fragment_new_habit"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".habit.view.complete.CollectScoreFragment">

<androidx.cardview.widget.CardView
    android:id="@+id/newHabitCardView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="24dp"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    app:cardCornerRadius="40dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/newHabitLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="364dp"
            android:layout_height="348dp"
            android:background="@drawable/welcome"
            android:fontFamily="@font/mulish_semi_bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1" />


        <Button
            android:id="@+id/collectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="141dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="134dp"
            android:text="Collect"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/youEarnedTextView"
            tools:layout_editor_absoluteY="562dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Congrats !"
            android:textSize="25dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            tools:layout_editor_absoluteY="383dp" />

        <TextView
            android:id="@+id/onCompletionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/mulish_semi_bold"
            android:text="On completion of 50% of you habit duration"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView1"
            tools:layout_editor_absoluteY="448dp" />

        <TextView
            android:id="@+id/youEarnedTextView"
            android:layout_width="121dp"
            android:layout_height="25dp"
            android:layout_marginStart="99dp"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/mulish_semi_bold"
            android:text="You earned 150"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/onCompletionTextView" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_marginStart="-5dp"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="113dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/youEarnedTextView"
            app:layout_constraintTop_toBottomOf="@+id/onCompletionTextView"
            app:srcCompat="@drawable/coin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>